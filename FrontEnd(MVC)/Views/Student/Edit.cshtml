@using APIDTOs;
@model APIDTOs.StudentDTOs
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Student", method: FormMethod.Post,new {@class = "form-horizontal"}))
{
   <div class="form-group">
        <input type="hidden" name="Id" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Name:</label>
        <div class="col-sm-10">
            <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name" required />
        </div>
    </div>
    <div class="form-group">
        <label for="FatherName" class="col-sm-2 control-label">Father Name:</label>
        <div class="col-sm-10">
            <input type="text" name="FatherName" id="FatherName" class="form-control" value="@Model.FatherName" required />
        </div>
    </div>
    <div class="form-group">
        <label for="Email" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-10">
            <input type="email" name="Email" id="Email" class="form-control" value="@Model.Email" required />
        </div>
    </div>
    <div class="form-group">
        <label for="Phone" class="col-sm-2 control-label">Phone:</label>
        <div class="col-sm-10">
            <input type="number" name="Phone" id="Phone" class="form-control" value="@Model.Phone" required />
        </div>
    </div>
    <div class="form-group">
        <label for="ClassId" class="col-sm-2 control-label">Class:</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.ClassId, new SelectList(ViewBag.List, "Id", "ClassName"), "Select Class", new { @class = "form-control" })
        </div>
      <div class="form-group">
                <label>Class Name</label>
             <select class="form-control" asp-for="Id">
               <option selected disabled value="0">Class name List </option>
                @foreach (var classs in ((List<ClassDTOs>)ViewBag.list))
                {
                    if(classs.Id == Model.ClassId)
                    {
                        <option selected class="form-control" value="@classs.Id">@classs.ClassName</option>                        
                    }
                    else
                    {
                        <option value="@classs.Id">@classs.ClassName</option>
                    }
                }
             </select>

      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
}

